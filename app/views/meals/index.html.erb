<%
  (0..30).step do |n|
    date = Date.today + n
    signups_for_this_day = @signups[date.strftime("%Y/%m/%d")]
    unless signups_for_this_day
      signups_for_this_day = {'breakfast' => 0, 'lunch' => 0, 'dinner' => 0}
    end

    %>

    <div class="row day" data-day="<%= date %>">

      <div class="container">


      <div class="col-sm-12">

        <h3>
          <%= date.strftime("%A, %b %d") %>
          <% if(n == 0) %>
            (Today)
          <% end %>
        </h3>

      </div>

      <% ['breakfast', 'lunch', 'dinner'].each do |meal| %>

        <div class="col-sm-4 meal" data-meal="<%=meal%>">

          <h4><%=meal.capitalize%></h4>

          <% if (signups_for_this_day[meal] > 1) %>
            <p class="text-success signed-up">Signed up for <%=signups_for_this_day[meal]%> people</p>
          <% end %>

          <% if (signups_for_this_day[meal] == 1) %>
            <p class="text-success signed-up">Signed up</p>
          <% end %>

          <button class="signup btn btn-default">
            Sign up
            <% if (signups_for_this_day[meal] > 0) %>
              another person
            <% end %>
          </button>

          <% if (signups_for_this_day[meal] > 0) %>
            <button class="cancel btn btn-default">Cancel</button>
          <% end %>

        </div>

      <% end %>

    </div>

  </div>

<% end %>